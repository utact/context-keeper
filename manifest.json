{
  "manifest_version": 3,
  "name": "Context Keeper",
  "version": "1.0",
  "description": "Context Keeper는 마지막에 읽던 위치를 정확히 기억하여 자동으로 복원해주는 스마트한 확장 프로그램입니다.",
  "permissions": ["storage", "tabs", "scripting", "alarms"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "css": ["highlighter.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/icon48.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "save-session": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Save current session"
    },
    "delete-session": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Delete current session"
    },
    "retry-restore-highlights": {
      "suggested_key": {
        "default": "Ctrl+Shift+H"
      },
      "description": "Retry restoring highlights on the current page"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
